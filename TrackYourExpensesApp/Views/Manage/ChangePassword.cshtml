@model ChangePasswordViewModel
@{
    Layout = "~/Views/Manage/_Layout.cshtml";
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="card-body">
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <h4>@ViewData["Title"]</h4>


    <form method="post">
        <h6 class="heading-small text-muted mb-4">User information</h6>
        <!-- may not be necessary <div asp-validation-summary="All" class="text-danger"></div>-->
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="OldPassword" class="form-control-label" for="input-old-password">Old password</label>
                        <input asp-for="OldPassword" type="password" id="input-old-password" class="form-control form-control-alternative" placeholder="Old password">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-control-label" for="input-password">New password</label>
                        <input asp-for="NewPassword" type="password" id="input-password" class="form-control form-control-alternative" placeholder="New Password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-control-label" for="input-confirm-password"></label>
                        <input asp-for="ConfirmPassword" id="input-confirm-password" class="form-control form-control-alternative" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />
            <button type="submit" class="btn btn-default">Set password</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
