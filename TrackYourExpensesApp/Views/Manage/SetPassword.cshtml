@model SetPasswordViewModel
@{
    Layout = "~/Views/Manage/_Layout.cshtml";
    ViewData["Title"] = "Set password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="card-body">
    @Html.Partial("_StatusMessage", Model.StatusMessage)
    <h4>Set your password</h4>

    <p class="text-info">
        You do not have a local username/password for this site. Add a local
        account so you can log in without an external login.
    </p>
    <form method="post">
        <h6 class="heading-small text-muted mb-4">User information</h6>
        <div class="pl-lg-4">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-control-label" for="input-password">New password</label>
                        <input asp-for="NewPassword" type="password" id="input-password" class="form-control form-control-alternative" placeholder="New Password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-control-label" for="input-confirm-password"></label>
                        <input asp-for="ConfirmPassword" id="input-confirm-password" class="form-control form-control-alternative" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr class="my-4" />
            <button type="submit" class="btn btn-default">Set password</button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
